<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Episodes.E18_CustomFonts">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font "
            android:textSize="50sp"/>


        <TextView
            android:id="@+id/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font "
            android:textSize="50sp"/>


        <TextView
            android:id="@+id/bunny"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font "
            android:textSize="50sp"/>


        <TextView
            android:id="@+id/charlotte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font "
            android:textSize="50sp"/>


        <TextView
            android:id="@+id/christmas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font "
            android:textSize="50sp"/>


        <TextView
            android:id="@+id/envelope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font "
            android:textSize="50sp"/>


        <TextView
            android:id="@+id/fabulous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font "
            android:textSize="50sp"/>


        <TextView
            android:id="@+id/locust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font "
            android:textSize="50sp"/>


        <TextView
            android:id="@+id/micky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font "
            android:textSize="50sp"/>

        <TextView
            android:id="@+id/monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font "
            android:textSize="46sp"
            android:typeface="monospace"/>

        <TextView
            android:id="@+id/sans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font "
            android:textSize="50sp"
            android:typeface="sans"/>

        <TextView
            android:id="@+id/serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font "
            android:textSize="50sp"
            android:typeface="serif"/>


    </LinearLayout>

</ScrollView>