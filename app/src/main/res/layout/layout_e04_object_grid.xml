<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/sngImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:src="@drawable/oham"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/e04background">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:shimmer_colored="true"
            app:shimmer_highlight_color="@color/colorPrimary"
            app:shimmer_duration="2000"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/SongName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/songName"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="8dp"
                android:layout_alignParentTop="true"/>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <TextView
            android:id="@+id/SingerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/singerName"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:padding="16dp"
            android:layout_alignParentBottom="true"
            android:textStyle="normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@+id/SingerName"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_remove_red_eye_24"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/View"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1750"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_favorite_border_24"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/Like"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="504"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_insert_comment_24"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/Comment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="153"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_date_range_24"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/Date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1399/7/17"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </LinearLayout>





        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

</LinearLayout>
